$C = "../Common.ui";

$C.@PageOverlay {
  LayoutMode: Middle;

  $C.@DecoratedContainer {
    Anchor: (Width: 650, Height: 420);

    #Title {
      Group {
        LayoutMode: Center;

        $C.@Title {
          @Text = "Permissible";
        }
      }
    }

    #Content {
      LayoutMode: Top;
      Padding: (Full: 16);

      // Cards container
      Group #CardsSection {
        LayoutMode: Center;
        Anchor: (Height: 140);

        Group #IndexCards {
          LayoutMode: Left;
        }
      }

      // Separator
      $C.@PanelSeparatorFancy {
        @Anchor = (Top: 16, Bottom: 16);
      }

      // Summary bar
      Group #SummaryBar {
        LayoutMode: Center;
        Background: $C.@InputBoxBackground;
        Anchor: (Height: 40);
        Padding: (Horizontal: 20, Vertical: 8);

        Group {
          LayoutMode: Left;

          Label {
            Style: (
              FontSize: 13,
              TextColor: #96a9be,
              VerticalAlignment: Center
            );
            Text: "Total:";
            Anchor: (Right: 8);
          }

          Label #TotalGroups {
            Style: (
              FontSize: 13,
              TextColor: #93844c,
              RenderBold: true,
              VerticalAlignment: Center
            );
            Text: "0 groups";
            Anchor: (Right: 16);
          }

          Label {
            Style: (
              FontSize: 13,
              TextColor: #565a68,
              VerticalAlignment: Center
            );
            Text: "|";
            Anchor: (Right: 16);
          }

          Label #TotalPlayers {
            Style: (
              FontSize: 13,
              TextColor: #93844c,
              RenderBold: true,
              VerticalAlignment: Center
            );
            Text: "0 players";
            Anchor: (Right: 16);
          }

          Label {
            Style: (
              FontSize: 13,
              TextColor: #565a68,
              VerticalAlignment: Center
            );
            Text: "|";
            Anchor: (Right: 16);
          }

          Label #TotalPermissions {
            Style: (
              FontSize: 13,
              TextColor: #93844c,
              RenderBold: true,
              VerticalAlignment: Center
            );
            Text: "0 permissions";
          }
        }
      }
    }
  }
}

$C.@BackButton {}
