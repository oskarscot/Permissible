$C = "../Common.ui";

Button {
  LayoutMode: Left;
  Anchor: (Left: 2, Right: 2, Bottom: 5, Height: 60, Width: 550/3);
  Background: $C.@InputBoxBackground;
  Padding: (Top: 4, Bottom: 4);
  Style: ButtonStyle(
    Sounds: $C.@ButtonSounds,
  );

  Label {
    FlexWeight: 1;
  }

  Label #IndexName {
    Style: (
      FontSize: 16,
      RenderBold: true,
      TextColor: #93844c
    );
    Anchor: (Top: 2);
    Padding: (Top: 14);
  }

  Label {
    FlexWeight: 1;
  }
}
